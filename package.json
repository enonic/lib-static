{
  "name": "lib-static",
  "description": "Enonic XP library for serving static assets (primarily immutable ones) from a folder in the application resource structure",
  "scripts": {
    "build": "concurrently -c auto -g --timings npm:build:*",
    "build:server": "npx tsup -d build/resources/main",
    "check": "concurrently -c auto -g --timings npm:check:types npm:lint",
    "check:types": "concurrently -g -r --timings npm:check:types:*",
    "check:types:server": "npx tsc --noEmit -p src/main/resources/tsconfig.json",
    "cov": "jest --no-cache --coverage",
    "lint": "eslint --cache",
    "test": "jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enonic/lib-static.git"
  },
  "author": "Christian Andreas Westgaard <cwe@enonic.com>",
  "contributors": [
    "Espen Norderud"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/enonic/lib-static/issues"
  },
  "homepage": "https://github.com/enonic/lib-static#readme",
  "devDependencies": {
    "@enonic-types/core": "^7.14.2",
    "@enonic-types/global": "^7.14.4",
    "@enonic-types/lib-io": "^7.14.4",
    "@enonic-types/lib-portal": "^7.14.4",
    "@enonic-types/lib-vhost": "^7.14.4",
    "@eslint/js": "^9.10.0",
    "@item-enonic-types/lib-router": "^3.0.0",
    "@swc/core": "^1.7.26",
    "@types/bun": "^1.1.8",
    "@types/node": "^22.5.5",
    "bun": "^1.1.26",
    "concurrently": "^9.0.1",
    "eslint": "^9.10.0",
    "glob": "^11.0.0",
    "jest-cucumber": "^4.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "q-i": "^2.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "private": true
}
